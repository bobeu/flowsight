{
  "name": "flowsight-contracts",
  "version": "1.0.0",
  "description": "FlowSight smart contracts - $FLOW token and staking contracts",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat deploy --network hardhat --export deployments/contracts.json",
    "deploy:local": "hardhat deploy --network hardhat --export deployments/contracts.json",
    "deploy:bnbTestnet": "hardhat deploy --network bnbTestnet --export deployments/contracts.json",
    "deploy:reset": "hardhat deploy --reset --export deployments/contracts.json",
    "sync:data": "node sync-data.js",
    "deploy:full": "hardhat deploy --network hardhat --export deployments/contracts.json && npm run sync:data",
    "verify": "hardhat verify"
  },
  "keywords": [
    "bnbTestnet",
    "binance",
    "solidity",
    "smart-contracts",
    "defi"
  ],
